{
  "name": "@fulexo/workspace",
  "version": "1.0.0",
  "description": "Fulexo Fulfillment Platform - Multi-tenant WooCommerce fulfillment with integrated shipping",
  "type": "module",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --watch --config jest.config.cjs",
    "test:coverage": "jest --coverage --config jest.config.cjs",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint apps/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint apps/**/*.{ts,tsx,js,jsx} --fix",
    "type-check": "tsc --noEmit",
    "build:all": "cd apps/api && npm run build && cd ../web && npm run build && cd ../worker && npm run build",
    "dev:all": "concurrently \"cd apps/api && npm run dev\" \"cd apps/web && npm run dev\" \"cd apps/worker && npm run dev\"",
    "install:all": "cd apps/api && npm install && cd ../web && npm install && cd ../worker && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fulexo/panel.git"
  },
  "keywords": [
    "fulfillment",
    "woocommerce",
    "shipping",
    "multi-tenant",
    "inventory",
    "order-management",
    "karrio",
    "nestjs",
    "nextjs",
    "typescript"
  ],
  "author": "Fulexo Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fulexo/panel/issues"
  },
  "homepage": "https://github.com/fulexo/panel#readme",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@cypress/react": "^9.0.1",
    "@cypress/vite-dev-server": "^7.0.0",
    "@cypress/webpack-dev-server": "^5.1.1",
    "@playwright/test": "^1.55.0",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "babel-jest": "^30.1.2",
    "concurrently": "^9.2.1",
    "cypress": "^15.2.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4"
  }
}
