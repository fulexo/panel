# Production Environment Variables
# Copy this file to .env and update the values

# Database
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/fulexo

# Redis
REDIS_URL=redis://redis:6379/0

# JWT & Security
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_64_characters
ENCRYPTION_KEY=your_32_character_encryption_key_here
SHARE_TOKEN_SECRET=your_share_token_secret_here

# Application URLs
NEXT_PUBLIC_API_BASE=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3001
SHARE_BASE_URL=http://localhost:3001

# Worker Service
WORKER_PORT=3002

# Logging
LOG_LEVEL=info

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload (Optional)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# CORS
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true