#!/usr/bin/env bash

# Set ROOT if not already set
if [ -z "${ROOT}" ]; then
    export ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
fi

# Activate python env
source "${ROOT}/bin/activate-env" >/dev/null 2>&1

# Run karrio cli
PYTHONPATH="${ROOT}/modules/cli:${PYTHONPATH}" python3 -m karrio_cli "${@}"
