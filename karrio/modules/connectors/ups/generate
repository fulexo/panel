SCHEMAS=./schemas
LIB_MODULES=./karrio/schemas/ups
find "${LIB_MODULES}" -name "*.py" -exec rm -r {} \;
touch "${LIB_MODULES}/__init__.py"

generate_schema() {
    echo "Generating $1..."
    "${ROOT}/bin/cli" codegen generate "$1" "$2" --no-nice-property-names  --append-type-suffix
}

generate_schema "${SCHEMAS}/document_upload_request.json" "${LIB_MODULES}/document_upload_request.py"
generate_schema "${SCHEMAS}/document_upload_response.json" "${LIB_MODULES}/document_upload_response.py"
generate_schema "${SCHEMAS}/error_response.json" "${LIB_MODULES}/error_response.py"
generate_schema "${SCHEMAS}/rating_request.json" "${LIB_MODULES}/rating_request.py"
generate_schema "${SCHEMAS}/rating_responses.json" "${LIB_MODULES}/rating_response.py"
generate_schema "${SCHEMAS}/shipping_request.json" "${LIB_MODULES}/shipping_request.py"
generate_schema "${SCHEMAS}/shipping_response.json" "${LIB_MODULES}/shipping_response.py"
generate_schema "${SCHEMAS}/tracking_response.json" "${LIB_MODULES}/tracking_response.py"
generate_schema "${SCHEMAS}/shipping_cancel_response.json" "${LIB_MODULES}/shipping_cancel_response.py"
