                        price: 0,
                        salePrice: 0,
                        sku: '',
                        stockQuantity: 0,
                        category: '',
                        productType: 'simple',
                        isBundle: false,
                        bundleDiscount: 0,
                        minBundleItems: 0,
                        maxBundleItems: 0,
                        bundleStock: 'parent',
                        storeId: '',
                        images: [],
