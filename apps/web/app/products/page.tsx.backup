                    <input
                      type="number"
                      className={`form-input ${formErrors['stockQuantity'] ? 'border-red-500' : ''}`}
                      placeholder="0"
                      value={formData.stockQuantity}
                      onChange={(e) => handleInputChange('stockQuantity', parseInt(e.target.value) || 0)}
