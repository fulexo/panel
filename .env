# Fulexo Platform Environment Configuration Template
# Copy this file to .env and update the values according to your setup
# This file is tracked in git as a template

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Use full URLs with http:// or https:// for CORS to work properly
DOMAIN_API=http://localhost:3000
DOMAIN_APP=http://localhost:3001

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PUBLIC_API_BASE=https://api.fulexo.com

# Backend API Base URL (for web service to connect to API service)
# Development: http://api:3000 (Docker internal network)
# Production: https://api.fulexo.com (external domain)
BACKEND_API_BASE=http://api:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=fulexo
POSTGRES_USER=fulexo_user
POSTGRES_PASSWORD=fulexo_secure_password_123

# =============================================================================
# CACHE & QUEUE CONFIGURATION
# =============================================================================
REDIS_URL=redis://valkey:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (minimum 64 characters for production) - split across line
JWT_SECRET=f761d519fb928bf0455b43220d8f7748cfc596f2b1379c5cbe5794ed140321a5

# Encryption key for sensitive data (exactly 32 characters)
ENCRYPTION_KEY=12345678901234567890123456789012

# =============================================================================
# OBJECT STORAGE (MinIO) CONFIGURATION
# =============================================================================
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=your_minio_access_key
S3_SECRET_KEY=your_minio_secret_key
S3_BUCKET=fulexo-cache

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Grafana admin password
GF_SECURITY_ADMIN_PASSWORD=your_secure_grafana_password

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================
