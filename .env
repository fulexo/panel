# Fulexo Platform Environment Configuration Template
# Copy this file to .env and update the values according to your setup
# This file is tracked in git as a template

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN_API=localhost:3000
DOMAIN_APP=localhost:3001

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PUBLIC_API_BASE=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=fulexo
POSTGRES_USER=fulexo_user
POSTGRES_PASSWORD=fulexo_password_123

# =============================================================================
# CACHE & QUEUE CONFIGURATION
# =============================================================================
REDIS_URL=redis://valkey:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (minimum 64 characters for production)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_minimum_64_characters_long_for_development_only

# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key

# =============================================================================
# OBJECT STORAGE (MinIO) CONFIGURATION
# =============================================================================
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minio_access_key
S3_SECRET_KEY=minio_secret_key
S3_BUCKET=fulexo-cache

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Grafana admin password
GF_SECURITY_ADMIN_PASSWORD=your_secure_grafana_password

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================
# These can be configured later via the admin panel

# WooCommerce integration is configured per store in the admin panel (Stores)

# SMTP Configuration (configure via Settings page)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# Share token secret for public order links
SHARE_TOKEN_SECRET=your_share_token_secret_32_chars

# App URL for email links
NEXT_PUBLIC_APP_URL=https://panel.fulexo.com

# Frontend API base URL
NEXT_PUBLIC_API_BASE=http://localhost:3000

# Share base URL for public order links
SHARE_BASE_URL=https://panel.fulexo.com

# =============================================================================
# KARRIO INTEGRATION CONFIGURATION
# =============================================================================
# Karrio API URL (internal service communication)
KARRIO_API_URL=http://karrio-server:5002

# Karrio API Token (for Fulexo to Karrio communication)
FULEXO_TO_KARRIO_API_TOKEN=your_karrio_api_token_here

# Internal API Token (for Worker to API communication)
FULEXO_INTERNAL_API_TOKEN=your_internal_api_token_here

# =============================================================================
# ADDITIONAL CONFIGURATION
# =============================================================================
# API Port (default: 3000)
PORT=3000

# Worker Port (default: 3002)
WORKER_PORT=3002

# Share Base URL for public order info
SHARE_BASE_URL=http://localhost:3001

# Share Token Secret for JWT signing
SHARE_TOKEN_SECRET=your-share-token-secret-here-min-32-chars

# Log Level (ERROR, WARN, LOG, DEBUG, VERBOSE)
LOG_LEVEL=LOG

# =============================================================================
# ADMIN PASSWORDS (for seed data)
# =============================================================================
# These passwords are used when creating initial admin users
ADMIN_PASSWORD=demo123
CUSTOMER_PASSWORD=demo123

# =============================================================================
# ALERTING CONFIGURATION (optional)
# =============================================================================
# Email for critical error alerts
ALERT_EMAIL=admin@fulexo.com

# Slack webhook URL for alerts
SLACK_WEBHOOK_URL=

