# Fulexo Platform Development Environment Configuration
NODE_ENV=development

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN_API=localhost:3001
DOMAIN_APP=localhost:3000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
PUBLIC_API_BASE=http://localhost:3001
NEXT_PUBLIC_API_BASE=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://fulexo_user:fulexo_password@localhost:5432/fulexo
POSTGRES_DB=fulexo
POSTGRES_USER=fulexo_user
POSTGRES_PASSWORD=fulexo_password

# =============================================================================
# CACHE & QUEUE CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=development_jwt_secret_key_for_development_purposes_only_minimum_64_characters_long
ENCRYPTION_KEY=development_encryption_key_32

# =============================================================================
# OBJECT STORAGE (MinIO) CONFIGURATION
# =============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio_access_key
S3_SECRET_KEY=minio_secret_key
S3_BUCKET=fulexo-dev

# =============================================================================
# SHARE CONFIGURATION
# =============================================================================
SHARE_BASE_URL=http://localhost:3000
SHARE_TOKEN_SECRET=development_share_token_secret_32

# =============================================================================
# ADMIN PASSWORDS (for development data)
# =============================================================================
ADMIN_PASSWORD=admin123
CUSTOMER_PASSWORD=customer123

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=LOG

# =============================================================================
# PORTS
# =============================================================================
PORT=3001
WORKER_PORT=3002