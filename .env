# Fulexo Platform Environment Configuration
# Production Environment Variables

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN_API=api.fulexo.com
DOMAIN_APP=panel.fulexo.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PUBLIC_API_BASE=https://api.fulexo.com
NEXT_PUBLIC_API_BASE=https://api.fulexo.com
NEXT_PUBLIC_APP_URL=https://panel.fulexo.com
FRONTEND_URL=https://panel.fulexo.com
WEB_URL=https://panel.fulexo.com
SHARE_BASE_URL=https://panel.fulexo.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=fulexo
POSTGRES_USER=fulexo_user
POSTGRES_PASSWORD=secure_postgres_password_2025
DATABASE_URL=postgresql://fulexo_user:secure_postgres_password_2025@postgres:5432/fulexo

# =============================================================================
# CACHE & QUEUE CONFIGURATION
# =============================================================================
REDIS_URL=redis://valkey:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (64+ characters for production)
JWT_SECRET=fulexo_jwt_secret_key_2025_production_secure_minimum_64_characters_long_for_rsa_encryption

# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=fulexo_encryption_key_32c

# Master key for additional security
MASTER_KEY_HEX=fulexo_master_key_hex_64_characters_long_for_advanced_encryption

# Share token secret for public order links
SHARE_TOKEN_SECRET=fulexo_share_token_secret_32_chars

# =============================================================================
# OBJECT STORAGE (MinIO) CONFIGURATION
# =============================================================================
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=fulexo_minio_access_key
S3_SECRET_KEY=fulexo_minio_secret_key_2025
S3_BUCKET=fulexo-cache

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Grafana admin password
GF_SECURITY_ADMIN_PASSWORD=fulexo_grafana_admin_2025

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=LOG

# =============================================================================
# API PORTS
# =============================================================================
PORT=3000
WORKER_PORT=3002

# =============================================================================
# ADMIN PASSWORDS (for seed data)
# =============================================================================
ADMIN_PASSWORD=Admin123!
CUSTOMER_PASSWORD=Customer123!
STAFF_PASSWORD=Staff123!
CUSTOMER_ADMIN_PASSWORD=Customer123!

# =============================================================================
# ALERTING CONFIGURATION (optional)
# =============================================================================
ALERT_EMAIL=admin@fulexo.com
SLACK_WEBHOOK_URL=